<section class="chat-app__content chat-content">
  {{#if activeChat}}
  <header class="chat-content__header">
    <div class="chat-content__info">
      <img
        class="avatar avatar--sm"
        src="{{ chatAvatar activeChat.avatar }}"
        alt="Аватар {{ activeChat.title }}"
      />
      <div>
        <h2 class="chat-content__title">{{ activeChat.title }}</h2>
      </div>
    </div>
    <div class="chat-content__actions">
      <button class="chat-content__action"><img src="/settings.svg" alt="settings" /></button>
    </div>
  </header>
  <section class="chat-content__messages">
    {{#each messages}}
    {{> chat-message}}
    {{/each}}
  </section>
  <footer class="chat-content__footer">
    <button class="chat-content__attach" type="button" data-attach-button>
      <img src="/attach.svg" alt="attach" />
    </button>
    <input class="chat-content__file-input" type="file" data-attach-input />
    <form class="chat-content__form" aria-label="Отправка сообщения">
      <div class="chat-content__input" data-component="message-input"></div>
      <div data-component="send-button"></div>
    </form>
  </footer>
  {{else}}
  <div class="chat-content__empty">
    <p>Выберите чат</p>
  </div>
  {{/if}}
</section>
