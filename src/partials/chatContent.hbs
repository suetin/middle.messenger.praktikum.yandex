<section class="chat-app__content chat-content">
  {{#if activeChat}}
  <header class="chat-content__header">
    <div class="chat-content__info">
      <div class="chat-content__chat">
        <button
          class="chat-content__chat-avatar js-avatar-open-form"
          type="button"
          aria-label="Изменить аватар чата"
        >
          <img class="avatar avatar--md" src="{{ chatAvatar activeChat.avatar }}" alt="Аватар {{ activeChat.title }}" />
        </button>
        <div class="chat-content__chat-meta">
          <h2 class="chat-content__title">{{ activeChat.title }}</h2>
        </div>
      </div>
      {{#if chatUsers.length}}
      <div class="chat-content__participants" aria-label="Участники чата">
        {{#each chatUsers}}
        <span class="chat-content__user">
          <img
            class="avatar chat-content__user-avatar"
            src="{{ chatUserAvatar this }}"
            alt="Аватар {{ chatUserName this }}"
          />
          <span class="chat-content__user-name">{{ chatUserName this }}</span>
          <button
            class="chat-content__user-remove"
            type="button"
            aria-label="Удалить пользователя"
            data-remove-user-id="{{ id }}"
          >
            ✕
          </button>
        </span>
        {{/each}}
        <button
          class="chat-content__participants-add"
          type="button"
          data-add-user
        >
          + Пользователь
        </button>
      </div>
      {{/if}}
    </div>
    <div class="chat-content__actions">
      <div class="chat-content__menu" data-chat-menu-wrapper>
        <button
          class="chat-content__action chat-content__menu-toggle"
          type="button"
          data-chat-menu-toggle
        >
          <img src="/settings.svg" alt="settings" />
        </button>
        <div class="chat-content__menu-list" data-chat-menu>
          <button class="chat-content__menu-item" type="button" data-delete-chat>
            Удалить чат
          </button>
        </div>
      </div>
    </div>
  </header>
  <section class="chat-content__messages">
    {{#if messages.length}}
    {{#each messages}}
    {{> chat-message}}
    {{/each}}
    {{else}}
    <div class="chat-content__empty">Сообщений пока нет</div>
    {{/if}}
  </section>
  <footer class="chat-content__footer">
    <button class="chat-content__attach" type="button" data-attach-button>
      <img src="/attach.svg" alt="attach" />
    </button>
    <input class="chat-content__file-input" type="file" data-attach-input accept="image/*" />
    <form class="chat-content__form" aria-label="Отправка сообщения">
      <div class="chat-content__input" data-component="message-input"></div>
      <div data-component="send-button"></div>
    </form>
  </footer>
  {{> avatar-form}}
  {{else}}
  <div class="chat-content__empty">
    <p>Выберите чат</p>
  </div>
  {{/if}}
</section>
