<section class="chat-app__content chat-content">
  {{#if activeChat}}
  <header class="chat-content__header">
    <div class="chat-content__info">
      {{#if activeChatUser}}
      <img
        class="avatar avatar--sm"
        src="{{ chatUserAvatar activeChatUser }}"
        alt="Аватар {{ chatUserName activeChatUser }}"
      />
      <div>
        <h2 class="chat-content__title">{{ chatUserName activeChatUser }}</h2>
      </div>
      {{else}}
      <button class="sidebar-chat-app__create-btn" type="button" data-add-user>
        + Пользователь
      </button>
      {{/if}}
    </div>
    <div class="chat-content__actions">
      <div class="chat-content__menu" data-chat-menu-wrapper>
        <button
          class="chat-content__action chat-content__menu-toggle"
          type="button"
          data-chat-menu-toggle
        >
          <img src="/settings.svg" alt="settings" />
        </button>
        <div class="chat-content__menu-list" data-chat-menu>
          <button class="chat-content__menu-item" type="button" data-remove-user>
            Удалить из чата
          </button>
        </div>
      </div>
    </div>
  </header>
  <section class="chat-content__messages">
    {{#if messages.length}}
    {{#each messages}}
    {{> chat-message}}
    {{/each}}
    {{else}}
    <div class="chat-content__empty">Сообщений пока нет</div>
    {{/if}}
  </section>
  <footer class="chat-content__footer">
    <button class="chat-content__attach" type="button" data-attach-button>
      <img src="/attach.svg" alt="attach" />
    </button>
    <input class="chat-content__file-input" type="file" data-attach-input accept="image/*" />
    <form class="chat-content__form" aria-label="Отправка сообщения">
      <div class="chat-content__input" data-component="message-input"></div>
      <div data-component="send-button"></div>
    </form>
  </footer>
  {{else}}
  <div class="chat-content__empty">
    <p>Выберите чат</p>
  </div>
  {{/if}}
</section>
